<!DOCTYPE html>
<html>
  <head>
    <title>Blog App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav nav-pills flex-column flex-sm-row">
      <%= link_to "Home",root_path, class:"flex-sm-fill text-sm-center nav-link active" %>
      <% if current_user %>
        <%= link_to "My post", login_posts_path, class:"flex-sm-fill text-sm-center nav-link" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"flex-sm-fill text-sm-center nav-link" %>
      <% else %>
        <%= link_to "Login", new_user_session_path, class:"flex-sm-fill text-sm-center nav-link" %>
      <% end %>
    </nav>


    <div class="container">

      <%= yield %>
    </div>
  </body>
</html>
